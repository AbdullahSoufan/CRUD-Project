<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Quote App</title>
  </head>

  <body>
    <h1>Let the quotes guid you!</h1>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
     
    </form>
    

    
    <h2> Quotes </h2>
   
    <ul class="quotes">
      <!-- Loop through quotes -->
   
      <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
          <!-- Output name from the iterated quote object -->
          <span><%= quotes[i].name %></span>:
          <!-- Output quote from the iterated quote object -->
          <span><%= quotes[i].quote %></span>
        </li>
      <% } %>
    </ul>




    <form action="/qoutes" method="put">
        <h3>Update a quote</h3>
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="update">Update</button>
    </form>

  </body>

